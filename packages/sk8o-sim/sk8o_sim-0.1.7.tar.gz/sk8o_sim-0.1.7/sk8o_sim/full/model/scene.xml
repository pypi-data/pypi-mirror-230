<mujoco model="sk8o_scene">


    <include file="sk8o_model.xml"/>

    <statistic center="0 0 0.1" extent="0.8"/>

    <visual>
        <headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0"/>
        <rgba haze="0.15 0.25 0.35 1"/>
        <!--    <global azimuth="120" elevation="-20"/>-->
        <!-- camera without much distortion -->
        <!-- <global fovy="2"/> -->
    </visual>

    <asset>
        <texture builtin="gradient" height="256" rgb1="1 1 1" rgb2=".6 .8 1" type="skybox" width="256"/>
        <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.9 0.9 0.9" rgb2="1 1 1" markrgb="0.2 0.2 0.2" width="300" height="300"/>
        <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5"
                  reflectance="0.15"/>
    </asset>

    <worldbody>
        <light pos="0 0 1.5" dir="0 0 -1" directional="true"/>
        <geom name="floor" size="0 0 0.05" type="plane" material="groundplane"/>
    </worldbody>

</mujoco>