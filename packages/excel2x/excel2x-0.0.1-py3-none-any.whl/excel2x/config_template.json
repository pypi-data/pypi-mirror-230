{
    "name": "SolitaireXXX",
    "root_dir": ".",
    "config_dir": "config/",
    "output_dir": "config_lua/",
    "client_dir": "../SolitaireXXX/",
    "groups": {
        "ConfigConstant": ["lua_data_list"],
        "SolitaireFish": ["lua_data_list"],
        "Language": ["lua_data_map_language", "lua_data_column"]
    },
    "option_template": {
        "lua_data_list": {
            "data_type": "lua",
            "suffix": ".lua.txt",
            "data_style": "list",
            "indent": 4,
            "max_depth": 1,
            "schema": "in_file",
            "output_dir": "config_lua/",
            "copy_to_dir": "{client_dir}/Assets/Game/Data/Config/",
            "desc": "生成 *.lua.txt 文件\n样式为 list [data1, data2, ...]\nSchema 放在文件内\n拷贝到 {copy_to_dir} 文件夹中"
        },
        "lua_data_map": {
            "data_type": "lua",
            "suffix": ".lua.txt",
            "data_style": "map",
            "indent": 4,
            "max_depth": 1,
            "schema": "in_file",
            "output_dir": "config_lua/",
            "copy_to_dir": "{client_dir}/Assets/Game/Data/Config/",
            "desc": "生成 *.lua.txt 文件\n样式为 map {key1: data1, key2:data2}\nSchema 放在文件内\n拷贝到 {copy_to_dir} 文件夹中"
        },
        "lua_data_map_language": {
            "data_type": "lua",
            "suffix": ".lua.txt",
            "data_style": "map",
            "indent": 4,
            "max_depth": 4,
            "schema": "in_file",
            "output_dir": "config_lua_language/",
            "copy_to_dir": "{client_dir}/Assets/Game/Data/Config/",
            "desc": "生成 *.lua.txt 文件\n样式为 map {key1: data1, key2:data2}\nSchema 放在文件内\n拷贝到 {copy_to_dir} 文件夹中"
        },
        "lua_data_column": {
            "data_type": "lua",
            "suffix": ".lua.txt",
            "data_style": "column",
            "indent": 4,
            "max_depth": 1,
            "schema": "none",
            "output_dir": "config_lua/",
            "copy_to_dir": "{client_dir}/Assets/Game/Data/Config/",
            "desc": "生成 file_name_{key}.lua.txt 文件\n样式为 column 列数据的列表 []，一般用于拆分多语言文件\n不要数据 Schema\n拷贝到 {copy_to_dir} 文件夹中"
        },
        "json_data_list": {
            "data_type": "json",
            "suffix": ".json",
            "data_style": "list",
            "indent": 4,
            "max_depth": 1,
            "schema": "@types",
            "output_dir": "config_json/",
            "copy_to_dir": "{client_dir}/Assets/Game/Data/ConfigJson/",
            "desc": "生成 *.json 文件\n样式为 list [data1, data2, ...]\nSchema 放在 @types 文件夹内\n拷贝到 {copy_to_dir} 文件夹中"
        },
        "json_data_map": {
            "data_type": "json",
            "suffix": ".json",
            "data_style": "map",
            "indent": 4,
            "max_depth": 1,
            "schema": "@types",
            "output_dir": "config_json/",
            "copy_to_dir": "{client_dir}/Assets/Game/Data/ConfigJson/",
            "desc": "生成 *.json 文件\n样式为 map {key1: data1, key2:data2}\nSchema 放在 @types 文件夹内\n拷贝到 {copy_to_dir} 文件夹中"
        },
        "json_data_column": {
            "data_type": "json",
            "suffix": ".json",
            "data_style": "column",
            "indent": 0,
            "max_depth": 1,
            "schema": "none",
            "output_dir": "config_json/",
            "copy_to_dir": "{client_dir}/Assets/Game/Data/Config/",
            "desc": "生成 file_name_{key}.json 文件\n样式为 column 列数据的列表 []，一般用于拆分多语言文件\n不要数据 Schema\n拷贝到 {copy_to_dir} 文件夹中"
        }
    }
}
