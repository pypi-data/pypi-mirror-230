{
  "$schema": "../../block-class.schema.json",
  "$id": "https://collimator.ai/models/blocks/base/signal_attributes/signal_datatype_conversion.json",
  "base": {
    "name": "SignalDatatypeConversion",
    "namespace": "core",
    "description": "This block converts the the input signal to the required data type provided by the user.",
    "feature_level": "dev"
  },
  "modes": {
    "feedthrough": true,
    "time": "agnostic"
  },
  "ports": {
    "inputs": {
      "static": [{"name": "in_0"}]
    },
    "outputs": {
      "static": [{"name": "out_0"}]
    }
  },
  "parameter_definitions": [
    {
      "name": "convert_to_type",
      "data_type": "string",
      "default_value": "float64",
      "description": "data type of the outputs",
      "value_is_a_type": true
    },
    {
      "name": "rounding_operation",
      "data_type": "string",
      "default_value": "none",
      "description": "Rounding operation when converting the data type to one with less precision",
      "allowed_values": [
        "none",
        "to_nearest",
        "downward",
        "upward",
        "toward_zero"
      ]
    }
  ]
}
